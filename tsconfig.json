{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "target": "ES2023",
    "lib": ["ES2024", "DOM"],
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
//    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
